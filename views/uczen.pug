extends layoutadmin

block content
    .container
        .py-5.text-center
            h2 eDziennik
            p.lead eDziennik zalozony na potrzeby projektu z PPZ WIT 2020/2021
        .row
            .col-md-4.order-md-2.mb-4
                h4.d-flex.justify-content-between.align-items-center.mb-3
                    span.text-muted Oceny ucznia 
                ul.list-group.mb-3
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            h6.my-0 Polski
                            small.text-muted 2,2,2,2,5,3
                        span.text-muted 3.5
                    // Å›rednia wyliczona na koniec z przedmiotu
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            h6.my-0 Matematyka
                            small.text-muted 4,5,4,5,3,5
                        span.text-muted 4.9
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            h6.my-0 Angielski
                            small.text-muted 5,5,5,5,5,5,5
                        span.text-muted 3
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            h6.my-0 WF
                            small.text-muted 5,5,5,5,5,5,5
                        span.text-muted 6
                    li.list-group-item.d-flex.justify-content-between
                        span srednia roczna
                        strong 2.1
            
            .col-md-8.order-md-1
                h4.mb-3 Profil Ucznia
                .row
                    .col-md-6.mb-3
                        label(for='imieUcznia') Imie
                        p.text-secondary #{user.imieUcznia}
                    .col-md-6.mb-3
                        label(for='nazwiskoUcznia') Nazwisko
                        p.text-secondary #{user.nazwiskoUcznia}
                .row
                    .col-md-6.mb-3
                        label(for='EmailUcznia') eMail
                        p.text-secondary #{user.EmailUcznia}
                    .col-md-6.mb-3
                        label(for='nrTelefonuUcznia') nr tel.
                        p.text-secondary #{user.nrTelefonuUcznia} 
                .mb-3
                    label(for='Klasa') Klasa
                    p.text-secondary #{user.Klasa_nazwaKlasy} 
                hr.mb-4
    footer.my-5.pt-5.text-muted.text-center.text-small.navbar.fixed-bottom.text-center.justify-content-center
        p.mb-1
