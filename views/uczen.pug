extends layoutadmin

block content
    .container
        .py-5.text-center
            h2 eDziennik
            p.lead eDziennik zalozony na potrzeby projektu z PPZ WIT 2020/2021
        .row
            .col-md-4.order-md-2.mb-4
                h4.d-flex.justify-content-between.align-items-center.mb-3
                    span.text-muted Oceny ucznia 
                ul.list-group.mb-3
                    each val , key in Object.fromEntries(oceny) 
                        li.list-group-item.d-flex.justify-content-between.lh-condensed
                            div
                                h6.my-0 #{key}
                                small.text-muted #{val}
                            span.text-muted #{srednie.get(key)}
                    li.list-group-item.d-flex.justify-content-between
                        strong Srednia roczna
                        span.text-muted #{sredniaRoczna}
            
            .col-md-8.order-md-1
                h4.mb-3 Profil Ucznia
                .row
                    .col-md-6.mb-3
                        label(for='imieUcznia') Imie
                        p.text-secondary #{user.imieUcznia}
                    .col-md-6.mb-3
                        label(for='nazwiskoUcznia') Nazwisko
                        p.text-secondary #{user.nazwiskoUcznia}
                .row
                    .col-md-6.mb-3
                        label(for='EmailUcznia') eMail
                        p.text-secondary #{user.EmailUcznia}
                    .col-md-6.mb-3
                        label(for='nrTelefonuUcznia') nr tel.
                        p.text-secondary #{user.nrTelefonuUcznia} 
                .mb-3
                    label(for='Klasa') Klasa
                    p.text-secondary #{user.nazwaKlasy} 
                hr.mb-4
    
        .container(style='width:  100%;')
            a.btn.btn-dark(href = '/logout', type='button', style='width: 50%;margin: auto;justify-content: center;align-items: center;display: block;') Wyloguj


        footer.my-5.pt-5.text-muted.text-center.text-small.fixed-bottom.text-center.justify-content-center
            p.mb-1
                | 2020-2021 Adam Nowali&nacute;ski, Daniel Pi&eogon;tka, Krzysztof Kalbarczyk, Jakub Kwiatkowski, Jakub Sza&lstrok;wicki

            
          
