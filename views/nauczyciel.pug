extends layoutadmin

block content
  .container
    .py-5.text-center
      h2 eDziennik
      p.lead eDziennik zalozony na potrzeby projektu z PPZ WIT 2020/2021
    .row
      .col-md-5.order-md-2.mb-4
        h4.d-flex.justify-content-between.align-items-center.mb-3
          span.text-muted Twoje dzialania
        form(name="addScore", method="post", action=`/nauczyciel/ocena`)
          ul.list-group.mb-3
            li.list-group-item.d-flex.justify-content-between.lh-condensed
              div
                h6.my-0 Wybierz przedmiot
              div.text-muted
                .container.p-0
                  select(class="form-control", id="subject", name="subject", onchange='listClasses()')
                    option(value="") 
                    each val, key in Object.fromEntries(sub)
                      option(value=key) #{key}

            li.list-group-item.d-flex.justify-content-between.lh-condensed
              div
                h6.my-0 Wybierz klas&eogon;
              div.text-muted
                .container.p-0
                  select(class="form-control", id="classes", name="classes", onchange='listName()')

            li.list-group-item.d-flex.justify-content-between.lh-condensed
              div
                h6.my-0 Wybierz ucznia
              div.text-muted
                .container.p-0
                  select(class="form-control", id="name", name="name")

            li.list-group-item.d-flex.justify-content-between.lh-condensed
              div
                h6.my-0 Wpisz kryterium 
              div.text-muted
                .container.p-0
                  .input-group
                    input(class= 'form-control',type='text', placeholder='test1',name="criteria")
            li.list-group-item.d-flex.justify-content-between.lh-condensed
              div
                h6.my-0 Wpisz ocenÄ™ 
              div
                .my-2.px-1
                  .input-group
                    input(class= 'form-control',type='text', placeholder='Ocena np: 4.5',id="score",name="score", onchange='validScore()')
  
            li.list-group-item.d-flex.lh-condensed
                div
                  .input-group-append
                    button.btn.btn-secondary(type='submit') Potwierd&zacute;
      .col-md-7.order-md-1
        h4.mb-3 Profil Nauczyciela
        .row
          .col-md-6.mb-3
            label(for='imieNauczyciela') Imi&eogon;
            p.text-secondary #{user.imieNauczyciela}
          .col-md-6.mb-3
            label(for='nazwiskoNauczyciela') Nazwisko
            p.text-secondary #{user.nazwiskoNauczyciela}
        .row
          .col-md-6.mb-3
            label(for='EmailNauczyciela') eMail
            p.text-secondary #{user.EmailNauczyciela}
          .col-md-6.mb-3
            label(for='nrTelefonuNauczyciela') nr tel.
            p.text-secondary #{user.nrTelefonuNauczyciela}
        hr.mb-4
    .container(style='width:  100%;')
          a.btn.btn-dark(href = '/logout', type='button', style='width: 50%;margin: auto;justify-content: center;align-items: center;display: block;') Wyloguj


    footer.my-5.pt-5.text-muted.text-center.text-small.fixed-bottom.text-center.justify-content-center
        p.mb-1
            | 2020-2021 Adam Nowali&nacute;ski, Daniel Pi&eogon;tka, Krzysztof Kalbarczyk, Jakub Kwiatkowski, Jakub Sza&lstrok;wicki